{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from 'axios';\nimport EditContactModal from './EditContactModal';\nimport AddContactForm from './AddContactForm';\nexport default {\n  name: 'ContactList',\n  components: {\n    EditContactModal,\n    AddContactForm\n  },\n  data() {\n    return {\n      searchQuery: '',\n      contacts: [],\n      selectedContact: null,\n      showAddModal: false,\n      showModal: false,\n      editedContact: null\n    };\n  },\n  computed: {\n    filteredContacts() {\n      return this.searchQuery.length > 0 ? this.contacts.filter(contact => contact.name.toLowerCase().includes(this.searchQuery.toLowerCase())) : this.contacts;\n    }\n  },\n  methods: {\n    fetchContacts() {\n      axios.get('http://localhost:8000/api/clientes').then(response => {\n        this.contacts = Array.isArray(response.data) ? response.data : [];\n      }).catch(error => {\n        console.error('Erro ao buscar os clientes:', error);\n        this.contacts = [];\n      });\n    },\n    openDetailModal(contact) {\n      this.selectedContact = contact;\n    },\n    openEditModal(contact) {\n      this.editedContact = {\n        ...contact\n      };\n      this.showModal = true;\n    },\n    closeDetailModal() {\n      this.selectedContact = null;\n    },\n    updateContact(updatedContact) {\n      const index = this.contacts.findIndex(contact => contact.id === updatedContact.id);\n      if (index !== -1) {\n        this.contacts.splice(index, 1, updatedContact);\n      }\n    },\n    getPhotoUrl(photoPath) {\n      // Construa o URL completo da foto usando o caminho relativo da foto\n      return 'http://localhost:8000/uploads/' + photoPath;\n    },\n    deleteContact(contactId) {\n      axios.delete(`http://localhost:8000/api/clientes/${contactId}`).then(response => {\n        console.log('Contato excluído com sucesso:', response.data);\n        this.contacts = this.contacts.filter(contact => contact.id !== contactId);\n      }).catch(error => {\n        console.error('Erro ao excluir contato:', error);\n      });\n    },\n    handleContactAdded(newContact) {\n      this.contacts.push(newContact);\n      this.showAddModal = false;\n    }\n  },\n  mounted() {\n    this.fetchContacts();\n  }\n};","map":{"version":3,"names":["axios","EditContactModal","AddContactForm","name","components","data","searchQuery","contacts","selectedContact","showAddModal","showModal","editedContact","computed","filteredContacts","length","filter","contact","toLowerCase","includes","methods","fetchContacts","get","then","response","Array","isArray","catch","error","console","openDetailModal","openEditModal","closeDetailModal","updateContact","updatedContact","index","findIndex","id","splice","getPhotoUrl","photoPath","deleteContact","contactId","delete","log","handleContactAdded","newContact","push","mounted"],"sources":["/home/natalia/teste_huggy_/huggy/src/components/ContactList.vue"],"sourcesContent":["<template>\n  <div class=\"contact-list-container\">\n    <!-- Seção de busca e botão de adicionar contato -->\n    <div class=\"search-and-add-container\">\n      <div class=\"search-input-container\">\n        <input type=\"search\" class=\"search-input\" placeholder=\"Buscar contato\" v-model=\"searchQuery\">\n        <i class=\"bi bi-search search-icon\"></i>\n      </div>\n      <!-- Botão para acionar o modal de adicionar novo contato -->\n      <button class=\"add-contact-button\" @click=\"showAddModal = true\">\n        + Adicionar contato\n      </button>\n    </div>\n<!-- Aqui começa o novo modal de detalhes do contato -->\n<div v-if=\"selectedContact\" class=\"contact-detail-modal\">\n  <div class=\"modal-overlay\" @click=\"closeDetailModal\"></div>\n  <div class=\"modal-content\">\n    <div class=\"modal-header\">\n       <div class=\"user-info\">\n    <img :src=\"getPhotoUrl(selectedContact.photo)\" alt=\"Foto do contato\" class=\"contact-photo-img\">\n    <h3>{{ selectedContact.name }}</h3>\n  </div>\n  <hr class=\"my-custom-line\">\n  <div class=\"modal-close-and-actions\">\n    <i class=\"fa fa-pencil-alt edit-icon\" @click.stop=\"openEditModal(selectedContact)\"></i>\n    <i class=\"fa fa-trash delete-icon\" @click.stop=\"deleteContact(selectedContact.id)\"></i>\n    <div class=\"modal-close\" @click=\"closeDetailModal\">&times;</div>\n  </div>\n</div>\n    <div class=\"modal-body\">\n      <p><strong>Email:</strong> {{ selectedContact.email }}</p>\n      <p><strong>Endereço:</strong> {{ selectedContact.address }}</p>\n      <p><strong>Bairro:</strong> {{ selectedContact.neighborhood }}</p>\n      <p><strong>Cidade:</strong> {{ selectedContact.city }}</p>\n      <p><strong>Estado:</strong> {{ selectedContact.state }}</p>\n    </div>\n  \n  </div>\n</div>\n\n    <!-- Tabela de contatos com novo layout -->\n    <table v-if=\"filteredContacts.length > 0\" class=\"contacts-table\">\n      <div class=\"contacts-table\">\n      <div class=\"contact-header\">\n        <span>Nome <i class=\"fa fa-chevron-down\" aria-hidden=\"true\"></i></span>\n        <span>Email</span>\n        <span class=\"contact-header-phone\">Telefone</span>\n      </div>\n      <div class=\"contact-body\" v-for=\"contact in filteredContacts\" :key=\"contact.id\">\n        <div class=\"contact-row\" v-for=\"contact in filteredContacts\" :key=\"contact.id\" @click=\"openDetailModal(contact)\">\n          <div class=\"contact-photo\">\n            <img :src=\"getPhotoUrl(contact.photo)\" alt=\"Foto do contato\">\n          </div>\n          <div class=\"contact-name\">{{ contact.name }}</div>\n          <div class=\"contact-email\">{{ contact.email }}</div>\n          <div class=\"contact-phone\">{{ contact.phone }}</div>\n          <div class=\"contact-actions\"><div>\n            <i class=\"fa fa-pencil-alt edit-icon\" @click.stop=\"openEditModal(contact)\"></i>\n            <i class=\"fa fa-trash delete-icon\" @click.stop=\"deleteContact(contact.id)\"></i>\n        </div>\n      </div>\n      </div>\n      </div>\n      </div>  \n    </table>\n    <div v-else class=\"no-contacts\">\n  <i class=\"fas fa-book-open no-contacts-icon\"></i>\n  <p>Ainda não há contatos</p>\n  <button class=\"add-contact-button\" @click=\"showAddModal = true\">\n    + Adicionar contato\n  </button>\n</div>\n    <div class=\"contact-actions\">\n    <!-- Modal de adicionar contato -->\n    \n    <add-contact-form v-if=\"showAddModal\" @contactAdded=\"handleContactAdded\" @closeModal=\"showAddModal = false\" />\n\n    <!-- Modal de editar contato -->\n    <edit-contact-modal\n    v-if=\"editedContact\"\n    :show-modal=\"showModal\"\n    :contact=\"editedContact\"\n    @update=\"updateContact\"\n    @close=\"showModal = false\"\n  />\n    </div>\n  </div>\n</template>\n\n<script>\nimport axios from 'axios';\nimport EditContactModal from './EditContactModal';\nimport AddContactForm from './AddContactForm';\n\nexport default {\n  name: 'ContactList',\n  components: {\n    EditContactModal,\n    AddContactForm,\n  },\n  data() {\n    return {\n      searchQuery: '',\n      contacts: [],\n      selectedContact: null,\n      showAddModal: false,\n      showModal: false,\n      editedContact: null,\n    };\n  },\n  computed: {\n    filteredContacts() {\n      return this.searchQuery.length > 0\n        ? this.contacts.filter(contact =>\n            contact.name.toLowerCase().includes(this.searchQuery.toLowerCase()))\n        : this.contacts;\n    },\n  },\n  methods: {\n    fetchContacts() {\n      axios.get('http://localhost:8000/api/clientes')\n        .then(response => {\n          this.contacts = Array.isArray(response.data) ? response.data : [];\n        })\n        .catch(error => {\n          console.error('Erro ao buscar os clientes:', error);\n          this.contacts = [];\n        });\n    },\n    openDetailModal(contact) {\n      this.selectedContact = contact;\n    },\n    openEditModal(contact) {\n    this.editedContact = { ...contact };\n    this.showModal = true; \n  },\n    closeDetailModal() {\n      this.selectedContact = null;\n    },\n    updateContact(updatedContact) {\n      const index = this.contacts.findIndex(contact => contact.id === updatedContact.id);\n      if (index !== -1) {\n        this.contacts.splice(index, 1, updatedContact);\n      }\n      \n    },\n    getPhotoUrl(photoPath) {\n    // Construa o URL completo da foto usando o caminho relativo da foto\n    return 'http://localhost:8000/uploads/' + photoPath;\n  },\n    deleteContact(contactId) {\n      axios.delete(`http://localhost:8000/api/clientes/${contactId}`)\n        .then(response => {\n          console.log('Contato excluído com sucesso:', response.data);\n          this.contacts = this.contacts.filter(contact => contact.id !== contactId);\n        })\n        .catch(error => {\n          console.error('Erro ao excluir contato:', error);\n        });\n    },\n    handleContactAdded(newContact) {\n      this.contacts.push(newContact);\n      this.showAddModal = false;\n    },\n  },\n  mounted() {\n    this.fetchContacts();\n  },\n};\n</script>\n\n<style scoped>\n.search-and-add-container {\n  display: flex;\n  justify-content: space-between;\n  margin-bottom: 20px;\n}\n\n.search-input-container {\n  position: relative;\n  flex-grow: 1;\n  margin-right: 10px;\n}\n.contacts-table {\n  width: 100%;\n  margin-top: 20px;\n}\n\n.contact-header {\n  display: flex;\n  justify-content: space-between;\n  padding-bottom: 10px;\n  border-bottom: 2px solid #eee;\n  font-weight: bold;\n}\n.modal-header {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n}\n\n.user-info {\n  display: flex;\n  align-items: center;\n}\n\n.contact-photo-img {\n  width: 50px; /* ou o tamanho que você desejar */\n  height: 50px;\n  border-radius: 50%;\n  object-fit: cover;\n  margin-right: 10px;\n}\n\n.my-custom-line {\n  border: none;\n  border-bottom: 1px solid #purple; /* escolha a cor que preferir */\n  margin-bottom: 10px;\n}\n\n.modal-close-and-actions